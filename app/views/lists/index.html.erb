<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2017/07/27/15/24/movie-2545676_1280.jpg);">
  <div class="container text-center">
    <h1>Movie Lists</h1>
    <%= link_to "Create new list", new_list_path, class:"btn btn-success" %>
  </div>
</div>

<h4 class="m-3"><strong>My Lists</strong></h4>
<div class="cards">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://cdn.pixabay.com/photo/2020/02/27/18/54/popcorn-4885565_1280.jpg')">
    <% end %>
      <h3><%= link_to list.name, list_path(list), class:"btn btn-primary" %> </h3>
      </div>
  <% end %>
</div>




